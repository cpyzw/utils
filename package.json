{
  "name": "zw-utils",
  "version": "1.1.5",
  "description": "uitis",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./dom": {
      "types": "./dist/dom/index.d.ts",
      "require": "./dist/dom/index.js",
      "import": "./dist/dom/index.mjs"
    }
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "start": "esno src/index.ts",
    "dev": "cross-env NODE_ENV='development' esno src/index.ts",
    "build": "npx tsup",
    "release": "npx bumpp && npm publish --access=public",
    "doc": "npm build && typedoc src/index.ts src/dom/index.ts",
    "lint": "npx eslint ./src --config=.eslintrc.js",
    "lint-fix": "npx eslint ./src --config=.eslintrc.js --fix"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "author": "cpyzw 946998295@qq.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yzwBeat/utils.git"
  },
  "keywords": [
    "utils"
  ],
  "bugs": {
    "url": "https://github.com/yzwBeat/utils/issues"
  },
  "homepage": "https://github.com/yzwBeat/utils#readme",
  "devDependencies": {
    "@types/node": "^18.7.14",
    "bumpp": "^8.2.1",
    "eslint": "^8.23.0",
    "esno": "^0.16.3",
    "lint-staged": "^12.4.1",
    "tsup": "^6.2.3",
    "typedoc": "^0.23.11",
    "typescript": "^4.8.2",
    "yorkie": "^2.0.0",
    "zw-standard": "^1.1.1"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node node_modules/zw-standard/git-hooks/commit-msg-verify.js"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "eslint ./src --config=.eslintrc.js"
    ]
  }
}
